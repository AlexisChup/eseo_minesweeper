<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxWidth="300dp"
    android:maxHeight="300dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/restartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rejouer"
        app:layout_constraintBottom_toTopOf="@+id/restartButtonGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/leaveText"
        app:layout_constraintTop_toBottomOf="@+id/EndSentence"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/leaveText"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:text="Quitter"
        app:layout_constraintBottom_toTopOf="@+id/leaveButtonGame"
        app:layout_constraintEnd_toStartOf="@+id/restartText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EndSentence"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/EndSentence"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Vous avez perdu !"
        app:layout_constraintBottom_toTopOf="@+id/leaveText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/leaveButtonGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/restartButtonGame"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leaveText"
        app:layout_constraintVertical_bias="0.297"
        app:srcCompat="@drawable/exit" />

    <ImageButton
        android:id="@+id/restartButtonGame"
        android:layout_width="74dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/leaveButtonGame"
        app:layout_constraintTop_toBottomOf="@+id/restartText"
        app:layout_constraintVertical_bias="0.304"
        app:srcCompat="@drawable/retry"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>